@model Web.Models.AddEditPersonViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="application/json">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonalNumber" class="control-label"></label>
                <input asp-for="PersonalNumber" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="BirthDay" class="control-label"></label>
                <input asp-for="BirthDay" class="form-control" />
            </div>
            <div class="form-group">
                @Html.DropDownListFor(Model => Model.GenderID, new SelectList(Model.Gender, "ID", "Value"), "Select Gender", new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.DropDownListFor(Model => Model.AddressID, new SelectList(Model.Address, "ID", "Value"), "Select Address", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="Phones" class="control-label"></label>
                <div class="phone-input">
                    <div class="row">
                        <div class="col-md-4">
                            @Html.DropDownListFor(Model => Model.PhoneTypeID, new SelectList(Model.PhoneType, "ID", "Value"), new { @class = "form-control", @name = "PhoneType[]" })
                        </div>
                        <div class="col-md-8">
                            <input asp-for="PhoneNumber" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="File" class="control-label"></label>
                <input asp-for="File" class="form-control" accept=".jpg,.jpeg"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
